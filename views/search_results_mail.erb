<!-- Page Content -->
<div class="wrap">
    <div class="container-fluid">
       
        <table class="table table-condensed">
		  <thead>
		    <tr>
		      <th></th>
		      <th>Sender</th>
		      <th>Title</th>
		      <th>Date</th>
		    </tr>
		  </thead>
		  
		  <tbody>
		    
		    <tr>
		      <td><input id="mark_all" class="marked" type="checkbox"></td>
		      <td></td>
		      <td></td>
		      <td></td>
		    </tr>
		      <% @dummy_mail.each_with_index do |mail,i| %>
		      <%if i = 2 %>
		        <tr class="read-mail" data-mail-index=<%="#{i}"%>>
		      <td>
		          <input class="marked" type="checkbox">
		      </td>
		      <td>
		      <a href="#"  data-mail-index=<%="#{i}"%> class="message_view" data-toggle="modal" data-target="#modalMessage"><%= mail["Sender"] %></a>
		      </td>
		      <td>
		        
		        <div class="col-md-10 inside_table">
		          <a href="#" data-mail-index=<%="#{i}"%> class="message_view" data-toggle="modal" data-target="#modalMessage" ><%= mail["Title"] %><small> - <%= mail["Excerpt"] %></small></a>
		        </div>
		        <div class="col-md-2">
		          <% if mail["Attachment"] == "true" %>
		          <i class="fa fa-paperclip"></i>
		          <% end %>
		          
		        </div>
		          
		      </td>
		    </tr>
		     
		    <% end %>

		    <% end %>

		   

		  </tbody>
		  
		</table>
    </div>
</div>
<!-- /#page-content-wrapper -->