<h1>Spam</h1>

<a class="compose btn btn-default" href="#" role="button"  data-toggle="modal" data-target="#myModal"><i class="fa fa-pencil"></i> Compose Mail</a>

<span id="read-delete">
  <a class="compose btn btn-default btn-default" href="#"><i class="fa fa-times"></i> Delete</a> 
           
</span>


<table class="table table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Sender</th>
      <th>Title</th>
      <th>Date</th>
    </tr>
  </thead>
  <tr>
    <td><input id="mark_all" class="marked" type="checkbox"></td>
    <td></td>
    <td></td>
    <td></td>
   
  </tr>

<% @dummy_mail.each_with_index do |mail,i| %>
  <tr class="unread-mail  <%="unread-#{i}"%>"><td><input id="mark_all" class="marked" type="checkbox"></td>
    <td>
    <a  class="unread <%="unread-#{i}"%>" href="#"  data-toggle="modal" data-target="#modalMessage"><%= mail["Sender"] %></a>
    </td>
    <td>
      <div class="col-md-8 inside_table">

      <a class="unread <%="unread-#{i}"%>" href="#"  data-toggle="modal" data-target="#modalMessage" >
        <%= mail["Title"] %><small> - <%= mail["Excerpt"] %></small></a>
      </div>

      <div class="col-md-4">
        <% if rand(6) > 3 %>
          <i class="fa fa-paperclip"></i>
        <% end %>
      </div>
    </td>
    <td>26/1/2015</td>
  </tr>

<% end %>

<% @dummy_mail_read.each do |mail| %>
  <tr class="read-mail"><td><input id="mark_all" class="marked" type="checkbox"></td>
    <td>
    <a href="#"  data-toggle="modal" data-target="#modalMessage"><%= mail["Sender"] %></a>
    </td>
    <td>
      <div class="col-md-8 inside_table">

      <a href="#"  data-toggle="modal" data-target="#modalMessage" >
        <%= mail["Title"] %><small> - <%= mail["Excerpt"] %></small></a>
      </div>

      <div class="col-md-4">
        <% if rand(6) > 3 %>
          <i class="fa fa-paperclip"></i>
        <% end %>
      </div>
    </td>
    <td>25/1/2015</td>
  </tr>

<% end %>

</table>
<%= erb :loading %>
<%= erb :modal_message %>