<h1>Inbox</h1>

<a class="compose btn btn-default" href="#" role="button"  data-toggle="modal" data-target="#myModal"><i class="fa fa-pencil"></i> Compose Mail</a>

<span id="read-delete">
  <a class="compose btn btn-default btn-default" href="#"><i class="fa fa-times"></i> Delete</a> 
  <a class="compose btn btn-default btn-default" href="#"><i class="fa fa-check-square-o"></i> Mark as Read</a>
</span>




<table class="table table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Sender</th>
      <th>Title</th>
      <th>Date</th>
    </tr>
  </thead>
  
  <tbody>
    
    <tr>
      <td><input id="mark_all" class="marked" type="checkbox"></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
      <% @@inbox.each_with_index do |mail,i| %>
      <%if i > @@inbox.size - 4 %>
        <tr class="read-mail" data-mail-index=<%="#{i}"%>>
      <td>
          <input class="marked" type="checkbox">
      </td>
      <td>
      <a href="#"  data-mail-index=<%="#{i}"%> class="message_view" data-toggle="modal" data-target="#modalMessage"><%= mail["Sender"] %></a>
      </td>
      <td>
        
        <div class="col-md-8 inside_table">
          <a href="#" data-mail-index=<%="#{i}"%> class="message_view" data-toggle="modal" data-target="#modalMessage" ><%= mail["Title"] %><small> - <%= mail["Excerpt"] %></small></a>
        </div>
        <div class="col-md-4">
          <% if mail["Attachment"] != "" %>
          <i class="fa fa-paperclip"></i>
          <% end %>

          <% if mail["Replied"] == "true" %>
          <span class="label label-default">Replied</span>
          <% end %>
          
        </div>
          
      </td>
      <td><%= mail["Date"] %></td>
    </tr>
      <% else %>
    <tr class="unread-mail  <%="unread-#{i}"%>" data-mail-index=<%="#{i}"%>>
      <td>
          <input class="marked" type="checkbox">
      </td>
      <td>
      <a class="unread <%="unread-#{i}"%> message_view" href="#"  data-mail-index=<%="#{i}"%>  data-toggle="modal" data-target="#modalMessage"><%= mail["Sender"] %></a>
      </td>
      <td>
        
        <div class="col-md-8 inside_table">
          <a href="#" data-mail-index=<%="#{i}"%> class="unread <%="unread-#{i}"%> message_view" data-toggle="modal" data-target="#modalMessage" ><%= mail["Title"] %><small> - <%= mail["Excerpt"] %></small></a>
        </div>
        <div class="col-md-4">
          <% if mail["Attachment"] != "" %>
          <i class="fa fa-paperclip"></i>
          <% end %>
          
        </div>
          
      </td>
      <td><%= mail["Date"] %></td>
    </tr>
    <% end %>

    <% end %>

   

  </tbody>
  
</table>

<%= erb :loading %>
<%= erb :modal_message %>