<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form action="/send_email" method="post">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Compose Email</h4>
      </div>
      <div class="modal-body">
        


        <div class="form-group">
          <label for="exampleInputEmail1">To</label>
          <input name="email" class="form-control" id="emailRecipient" placeholder="email@example.com">
        </div>
            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModalAddRecipient" data-dismiss="modal">Add Recipient</button>
        <br><br>
        <div class="form-group">
          <label for="exampleInputPassword1">Title</label>
          <input name="title" type="text" class="form-control" placeholder="Title">
        </div>

        <div class="form-group"><textarea name="content" class="form-control" rows="10"></textarea></div>
  
        <div class="form-group"><input name="attachment" type="file" class="form-control"></div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Save</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Discard</button>
          <input type="submit" name="send" value="Send" class="btn btn-default pull-left" data-toggle="modal" data-target="#modalMessageSent"></input>
        </div>
        </form>
    </div>
  </div>
</div>
